{
    // Python settings
    "python.defaultInterpreterPath": "./venv/bin/python",
    // Ruff settings
    "ruff.enable": true,
    "ruff.lint.enable": true,
    "ruff.format.enable": true,
    // Editor settings
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports.ruff": "explicit"
    },
    "editor.rulers": [
        90
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // File associations
    "files.associations": {
        "*.yaml": "yaml",
        "*.yml": "yaml"
    },
    // Files to exclude from explorer
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.egg-info": true,
        "**/build": true,
        "**/dist": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        ".idea/": true,
        "**/chains": true,
        "**/.ipynb_checkpoints": true
    },
    // Search exclude patterns
    "search.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.egg-info": true,
        "**/build": true,
        "**/dist": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true
    }
}
